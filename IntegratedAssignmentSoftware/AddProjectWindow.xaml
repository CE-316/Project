<Window x:Class="IntegratedAssignmentSoftware.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedAssignmentSoftware"
        mc:Ignorable="d"
        Title="AddProjectWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock
            Text="Project Name"
            HorizontalAlignment="Center"
            Grid.Row="1"
            Margin="10"
            ></TextBlock>
        <TextBox
            Grid.Row="2"
            Margin="10"
            ></TextBox>
        <TextBlock
            Text="Assignment Overview (This section presents the assignment prompt and any rules or limitations)"
            Grid.Row="3"
            HorizontalAlignment="Center"
            Margin="10"
            ></TextBlock>
        <RichTextBox
            Grid.Row="4"
            Margin="10"
            VerticalScrollBarVisibility="Auto"
            Height="200"
            ></RichTextBox>
        <Button
            Content="Add Project"
            HorizontalAlignment="Center"
            Padding="10"
            Grid.Row="5"
            ></Button>
    </Grid>
</Window>
