<Window x:Class="IntegratedAssignmentSoftware.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="600" Width="800" Foreground="#ffff">
    <Grid Background="#252525" >
        
            
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel >
                <TextBlock Foreground="#ffff" FontSize="20" FontWeight="Bold" Margin="0,0,0,10">
                    User Manual
                </TextBlock>
                
                    
                
                <!-- Section 1: Configurations -->
                <TextBlock Foreground="#ffff" FontSize="16" FontWeight="Bold" Margin="0,10,0,5">1) Configurations</TextBlock>
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="• “Add configuration” creates a new configuration." Margin="0,2"/>
                    <TextBlock Text="• “Import Configuration” Imports a configuration file selected with a file chooser." Margin="0,2"/>
                    <TextBlock Text="• “Edit” allows to make changes to the existing configuration." Margin="0,2"/>
                    <TextBlock Text="• “Delete” removes the configuration permanently. – Removes the configuration permanently." Margin="0,2"/>
                    <TextBlock Text="• “Export” exports the configuration to the selected directory and can later be used with “Import Configuration.” " Margin="0,2"/>
                </StackPanel>

                <TextBlock Foreground="#ffff" FontSize="14" FontWeight="Bold" Margin="10,10,0,5">1.1) Configuration Details</TextBlock>
                <StackPanel Margin="30,0,0,0">
                    <TextBlock Text="• “Language/Configuration Name:” is the name of the configuration and is irrelevant regarding the programs functionality." Margin="0,2"/>
                    <TextBlock Text="• “Compile Command With Arguments:” The command used for the compilation is written here." Margin="0,2"/>
                    <TextBlock Text="• “Run Command With Argument: “ The command used to start the program is written here." Margin="0,2"/>
                </StackPanel>

                <!-- Section 2: Projects -->
                <TextBlock Foreground="#ffff" FontSize="16" FontWeight="Bold" Margin="0,20,0,5">2) Projects</TextBlock>
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="• “Add Project” creates a new project with a name and a description." Margin="0,2"/>
                    <TextBlock Text="• “Open” opens the project to be used." Margin="0,2"/>
                    <TextBlock Text="• “Edit”  allows to make changes to an existing project and also allows the additon of test cases." Margin="0,2"/>
                    <TextBlock Text="• “Delete” removes the project permanently." Margin="0,2"/>
                </StackPanel>

                <TextBlock Foreground="#ffff"  FontSize="14" FontWeight="Bold" Margin="10,10,0,5">2.1) Project Details</TextBlock>
                <StackPanel Margin="30,0,0,0">
                    <TextBlock Text="• “Select Submissions Folder: ” Selects the folder that contains the submitted projects in .zip format. " Margin="0,2"/>
                    <TextBlock Text="• “Save Results: ” Creates the folder “Saves” and saves the results of the test cases  in the folder." Margin="0,2"/>
                    <TextBlock Text="• “Run: ” Runs the projects in the selected submissions folder and compares the output with the expected output of the test cases." Margin="0,2"/>
                    <TextBlock Text="• “Choose Configuration: “ selects a single configuration in order to run the submission with." Margin="0,2"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>
