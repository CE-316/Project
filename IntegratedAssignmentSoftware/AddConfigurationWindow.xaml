<Window x:Class="IntegratedAssignmentSoftware.AddConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedAssignmentSoftware"
        mc:Ignorable="d"
        Title="AddConfigurationWindow" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock 
            Text="Language/Configuration Name:"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="10"
            ></TextBlock>
        <TextBox
            Grid.Row="2"
            Margin="10"
            ></TextBox>
        <TextBlock 
            Text="Compile Command With Arguments:"
            Grid.Row="3"
            HorizontalAlignment="Center"
             Margin="10"
        ></TextBlock>
        <TextBox
            Grid.Row="4"
            Margin="10"
        ></TextBox>
        <TextBlock 
            Text="Run Command With Arguments:"
            Grid.Row="5"
            HorizontalAlignment="Center"
             Margin="10"
        ></TextBlock>
        <TextBox
            Grid.Row="6"
            Margin="10"
        ></TextBox>
        <Button
            Content="Add Configuration"
            Grid.Row="7"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="10"
            ></Button>
    </Grid>
</Window>
