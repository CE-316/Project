<Window x:Class="IntegratedAssignmentSoftware.AddConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedAssignmentSoftware"
        mc:Ignorable="d"
        Title="AddConfigurationWindow" Background="#101010" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock
            Text="Language/Configuration Name:"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="10"
            Foreground="White"
            ></TextBlock>
        <TextBox
            x:Name="LanguageTextBox"
            Grid.Row="2"
            Margin="10"
            ></TextBox>
        <TextBlock 
            Text="Compile Command With Arguments:"
            Grid.Row="3"
            HorizontalAlignment="Center"
            Margin="10"
            Foreground="White"
        ></TextBlock>
        <TextBox
            x:Name="CompileTextBox"
            Grid.Row="4"
            Margin="10"
        ></TextBox>
        <TextBlock 
            Text="Run Command With Arguments:"
            Grid.Row="5"
            HorizontalAlignment="Center"
            Margin="10"
            Foreground="White"
        ></TextBlock>
        <TextBox
            x:Name="RunTextBox"
            Grid.Row="6"
            Margin="10"
        ></TextBox>
        <Button
            x:Name="select"
            Click="AddConfigurationButton_Click"
            Content="Add Configuration"
            Grid.Row="7"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Padding="10" Height="32" Margin="207,32,0,0" Grid.RowSpan="2" Width="120"
        ></Button>
    </Grid>
</Window>
