<Window x:Class="IntegratedAssignmentSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedAssignmentSoftware"
        mc:Ignorable="d"
        Title="Integrated Assignment Environment" Height="600" Width="1200"
        Background="#101010"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="White" Text="Integrated Assignment Environment" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="30" TextAlignment="Center" Padding="10,25"/>
        <TextBlock Foreground="White" Text="Configurations" Grid.Row="2" Grid.Column="1" FontSize="30" HorizontalAlignment="Center" Padding="10,25"/>
        <TextBox Foreground="White" x:Name="ConfigurationSearchBox"
             Grid.Row="3"
             Grid.Column="1"
             Width="350"
             TextChanged="ConfigurationSearchBox_TextChanged"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="AddConfigurationButton"
                    Click="AddConfigurationButton_Click"
                    Content="Add Configuration"
                    FontSize="15"
                    Width="160"
                    Height="40"
                    Margin="5"
                    />
            <Button x:Name="ImportConfigurationButton"
                    Click="ImportConfigurationButton_Click"
                    Content="Import Configuration"
                    FontSize="15"
                    Width="160"
                    Height="40"
                    Margin="5"
                    />
        </StackPanel>

        <ListBox Background="#252525" x:Name="ConfigurationListBox"
         Grid.Row="4" Grid.Column="1"
         Height="200" Width="350"
         Margin="0,10,0,10"
         ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Foreground="White" Text="{Binding Language}" VerticalAlignment="Center" Width="165"/>
                        <Button x:Name="EditConfigurationButton" Content="Edit"
                            Click="EditConfigurationButton_Click"
                            Tag="{Binding}"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Right"
                            />
                        <Button x:Name="DeleteConfigurationButton" Content="Delete"
                            Click="DeleteConfigurationButton_Click"
                            Tag="{Binding}"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Right"    
                            />
                        <Button x:Name="ExportConfigurationButton" Content="Export"
                                Click ="ExportConfigurationButton_Click"
                                Tag="{Binding}"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Right"
                                ></Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Foreground="White" Text="Projects" Grid.Row="2" Grid.Column="3" FontSize="30" HorizontalAlignment="Center" Padding="10,25"/>
        <TextBox Foreground="White" x:Name="ProjectSearchBox"
             Grid.Row="3"
             Grid.Column="3"
             Width="350"
             TextChanged="ProjectSearchBox_TextChanged"/>
        <StackPanel Grid.Row="5" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="AddProjectButton"
                Click="AddProjectButton_Click"
                Content="Add Project"
                FontSize="15"
                Width="160"
                Height="40"/>
        </StackPanel>
        <ListBox Background="#252525" ScrollViewer.VerticalScrollBarVisibility="Visible"
             Margin="0,10,0,10"
             x:Name="ProjectListBox"
             Grid.Row="4"
             Grid.Column="3"
             Height="200"
             Width="350">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Foreground="White" Text="{Binding Name}" VerticalAlignment="Center" Width="175"/>
                        <Button Content="Open"
                            Click="OpenProjectButton_Click"
                            Tag="{Binding}"/>
                        <Button Content="Edit"
                            Click="EditProjectButton_Click"
                            Tag="{Binding}"
                            Margin="5,0,0,0"/>
                        <Button Content="Delete"
                            Click="DeleteProjectButton_Click"
                            Tag="{Binding}"
                            Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
