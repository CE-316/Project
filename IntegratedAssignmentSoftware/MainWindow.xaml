<Window x:Class="IntegratedAssignmentSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegratedAssignmentSoftware"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Integrated Assignment Environment" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="30" TextAlignment="Center" Padding="10,25,10,25"></TextBlock>
        <TextBlock Text="Configurations" Grid.Row="2" Grid.Column="1" FontSize="30"  Padding="10,25,10,25"></TextBlock>
        <TextBox x:Name="ConfigurationSearchBox"
             Grid.Row="3"
             Grid.Column="1"
             FontSize="20"
             Width="250"
             TextChanged="ConfigurationSearchBox_TextChanged"/>
        <Button x:Name="AddConfigurationButton"
            Click="AddConfigurationButton_Click"
            Grid.Row="5"
            Grid.Column="1"
            Content="Add Configuration +"
            FontSize="15"
            Width="160"
            Height="40"
            ></Button>
        <TextBlock Text="Projects" Grid.Row="2" Grid.Column="3" FontSize="30" HorizontalAlignment="Center" Padding="10,25,10,25"></TextBlock>
        <TextBox x:Name="ProjectSearchBox"
        Grid.Row="3"
        Grid.Column="3"
        FontSize="20"
        Width="250"
        TextChanged="ProjectSearchBox_TextChanged"/>
        <Button x:Name="AddProjectButton"
    Click="AddProjectButton_Click"
    Grid.Row="5"
    Grid.Column="3"
    Content="Add Project +"
    FontSize="15"
    Width="160"
    Height="40"
    ></Button>
    </Grid>
</Window>
